<div class="container">
  
    <a class="btn btn-default" href="/list" role="button">돌아가기</a>
    
    <div class="jumbotron">
      <h2><%= @list.title%></h2>
      <div class="row">
        <p class="col-md-3">이름 : <%= @list.name %></p>
        <p class="col-md-3">나이 : <%= @list.age %></p>
        <p class="col-md-3">성별 : <%= @gender %></p>
      </div>
      <p>
        <hr>
        <%= @list.content %>
      </p>
      <p><a class="btn btn-primary btn-lg" id="show_hidden"role="button">관심 등록하기</a></p>
      
    </div>
    
    <div id="hidden" style="display:none" class="alert alert-warning" role="alert">
      <form class="form-horizontal" action="/join" method="post">
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <input type="hidden" name="host_id" value="<%= @list.id %>">
            <input type="text" name="name" class="form-control" placeholder="Name">
          </div>
        </div>
        
        <div class="form-group" >
          <label class="col-sm-2 control-label">Age</label>
          <div class="col-sm-4">
            <input type="text" name="age" class="form-control" placeholder="Age">
          </div>
          <label class="col-sm-2 control-label">Gender</label>
          <div class="col-sm-4">
            <label class="radio-inline">
              <input type="radio" name="gender" value="true" checked> Male
            </label>
            <label class="radio-inline">
              <input type="radio" name="gender" value="false"> Female
            </label>
          </div>
        </div>
        
        <div class="form-group">
          <label class="col-sm-2 control-label">Title</label>
          <div class="col-sm-10">
            <input type="text" name="title" class="form-control" placeholder="Title">
          </div>
        </div>
        
        <button class="btn btn-default" type="submit">등록하기</button>
      </form>
    </div>
    
    <% @list.joins.where(gender: @other).each do |j| %>
      <div class="alert gender_<%= j.gender %>" role="alert">
        <div class="row">
          <div class="col-md-3 alert-link"><%= j.name %></div>
          <div class="col-md-3 alert-link"><%= j.age %>세</div>
          <div class="col-md-6 alert-link"><%= j.title %></div>
        </div>
      </div>
    <% end %>
    
    
    
    
    
</div>

<script>
$('#show_hidden').click(function(){
  $( "#hidden" ).fadeToggle( "fast", "linear" );
 
});
</script>